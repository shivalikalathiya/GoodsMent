<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:id="@+id/bottamSheetContainer"
    android:background="@drawable/bottamsheetdesign"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    tools:context=".fragment_bottam_sheet_dailog">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/adamina"
        android:text="Choose Your Service"
        android:textColor="@color/blue"
        android:textSize="15sp"
        android:textStyle="bold"
        />


    <LinearLayout
        android:id="@+id/local"
        android:layout_width="370dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLocal"
            android:layout_width="370dp"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#E3E6F1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6">



            <ImageView
                android:id="@+id/localimg"
                android:layout_width="98dp"
                android:layout_height="64dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="32dp"
                android:src="@drawable/citytruck"
                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/adamina"
                android:text="Local"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/outstation"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        tools:ignore="DuplicateIds">



        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#B0FAC5"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6">


            <ImageView
                android:id="@+id/outstationimg"
                android:layout_width="98dp"
                android:layout_height="64dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/citytruck" />

            <TextView
                android:id="@+id/outstation1"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/adamina"
                android:text="OutStation"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>



</RelativeLayout>