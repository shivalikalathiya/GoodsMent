<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        app:title="Home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white"/>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="191dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="10dp"
            app:cardElevation="20dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="20dp"
            >


            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:iss_auto_cycle="true"
                app:iss_period="1000"
                app:iss_title_background="@drawable/graybackground"
                app:iss_delay="1000"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="330dp"
            android:text="Book Goodsment For"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/adamina"
            android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_marginTop="380dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/goodstruck"
            android:layout_width="195dp"
            android:layout_height="146dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="15dp">


            <ImageView
                android:layout_width="138dp"
                android:layout_height="91dp"
                android:layout_gravity="end"
                android:layout_marginTop="7dp"
                android:src="@drawable/goodstruck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="95dp"
                android:fontFamily="@font/adamina"
                android:text="Truks"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/goodsbike"
            android:layout_width="195dp"
            android:layout_height="146dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="15dp">


            <ImageView
                android:layout_width="138dp"
                android:layout_height="91dp"
                android:layout_gravity="end"
                android:layout_marginTop="7dp"
                android:src="@drawable/goodsbike" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="95dp"
                android:fontFamily="@font/adamina"
                android:text="2 Wheeler"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="490dp"
            android:orientation="vertical">






        </LinearLayout>

</FrameLayout>
